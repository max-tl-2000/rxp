  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "backend",
      "runtimeExecutable": "${workspaceRoot}/backend/node_modules/.bin/babel-node",
      "runtimeArgs": [
        "--extensions",
        ".js,.ts,.json",
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/backend",
      "program": "${workspaceFolder}/backend/src/main.js"
    }
  ]
}